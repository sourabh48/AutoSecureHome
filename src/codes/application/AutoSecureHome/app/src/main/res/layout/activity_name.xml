<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.soura.autosecurehome.NameActivity">

    <include layout="@layout/app_tool_bar" android:id="@+id/status_app_bar"/>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/status_app_bar"
        android:padding="20dp"
        android:background="@drawable/joy">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:background="@drawable/edit_text_border"
            android:id="@+id/textInputLayout"
            android:theme="@style/TextLabel">

            <android.support.design.widget.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="40dp"
                android:hint="@string/input_name"
                android:padding="6dp"
                android:maxLength="50"
                android:textSize="20sp" />


        </android.support.design.widget.TextInputLayout>

        <Button
            android:id="@+id/save_name_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_below="@+id/textInputLayout"
            android:layout_gravity="center_horizontal"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/login_button"
            android:padding="9dp"
            android:shadowDx="4"
            android:shadowDy="2"
            android:text="@string/save_changes"
            android:textColor="@color/textcolorwhite"
            android:textSize="15sp"
            android:textStyle="bold"
            android:onClick="Save" />

    </RelativeLayout>

</RelativeLayout>
